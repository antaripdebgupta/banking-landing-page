---
export interface Props {
  statusCode?: number;
  message?: string;
}

const { statusCode = 404, message = "Page Not Found!" } = Astro.props;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{statusCode} Error</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="text-center p-8 max-w-md mx-4 bg-white rounded-xl shadow-lg border border-gray-200">
        <div class="animate-bounce">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>
        
        <h1 class="text-7xl font-bold text-red-500 mt-4 mb-4">
            {statusCode}
        </h1>
        
        <p class="text-xl text-gray-600 mb-6">
            {message}
        </p>
        
        <a href="/" class="inline-block px-6 py-3 bg-blue-500 text-white font-medium rounded-lg shadow hover:bg-blue-600 transition-colors">
            Return Home
        </a>
    </div>
</body>
</html>