---
import { FaArrowRight } from "react-icons/fa";

const props = {
  imageSrc: "/assets/about.webp",
  title: "FCB AT A GLANCE",
  description: "FCB Bank is a trusted financial institution offering a wide range of services, including Retail Banking, SME Solutions, Corporate Banking, Loans, Mobile Banking, and Secure Payments. Committed to innovation and customer satisfaction, we provide seamless banking experiences tailored to your needs.",
  readMoreLink: "http://localhost:4321/",
};
---

<section class="md:px-40 mx-auto max-w-full px-4 py-8">
  <div class="flex flex-col md:flex-row items-center gap-6">
    <!-- Left Side: Image -->
    <div class="flex flex-1 relative">
      <div class="w-fit overflow-hidden rounded-md border-2">
        <img src={props.imageSrc} alt="Image" class="w-full h-auto max-h-[500px] object-contain rounded-md" />
      </div>

      <!-- Overlay Text for Mobile -->
      <div class="absolute inset-0 flex flex-col items-center justify-center text-white text-center z-20 bg-black/50 p-4 md:hidden">
        <h2 class="text-2xl font-bold">{props.title}</h2>
        <p class="mt-2 text-xl">{props.description}</p>
        <a href={props.readMoreLink} class="mt-4 inline-flex items-center font-semibold hover:underline text-green-400">
          Read More <FaArrowRight className="ml-2" />
        </a>
      </div>
    </div>    

    <!-- Right Side: Text Content (Only for Desktop) -->
    <div class="w-full md:w-1/2 text-center md:text-left hidden md:block">
      <h2 class="text-2xl font-bold text-gray-800">{props.title}</h2>
      <p class="mt-2 text-xl text-gray-600">{props.description}</p>
      <a href={props.readMoreLink} class="mt-4 inline-flex items-center text-green-700 font-semibold hover:underline">
        Read More <FaArrowRight className="ml-2" />
      </a>
    </div>
  </div>
</section>
